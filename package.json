{
  "name": "ink-text-animation",
  "version": "0.1.0",
  "description": "A text animation component for Ink",
  "keywords": [
    "ink",
    "animation",
    "chalk",
    "component",
    "chalk-animation"
  ],
  "license": "MIT",
  "author": "Yarden Sod-Moriah <yardnsm@gmail.com> (yardnsm.net)",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "repository": "yardnsm/ink-text-animation",
  "scripts": {
    "start": "npm run test:watch",
    "build": "babel ./src --out-dir ./dist",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx",
    "pretest": "npm run build",
    "test": "jest",
    "posttest": "npm run lint",
    "test:watch": "jest --watch",
    "clean": "rm -rf ./dist",
    "prepublish": "npm test && npm run build",
    "example": "babel-node example/example"
  },
  "dependencies": {
    "chalk-animation": "^1.6.0",
    "ink": "^2.1.1",
    "prop-types": "^15.6.1",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "ink-testing-library": "^1.0.1",
    "jest": "^24.7.1"
  },
  "engines": {
    "node": ">=6"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "bail": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": true
  }
}
